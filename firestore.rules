rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function userRole() {
      return isSignedIn() ? get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role : null;
    }

    function isAdmin() { return userRole() == 'admin'; }
    function isAssistant() { return userRole() == 'assistant'; }
    function isDoctor() { return userRole() == 'doctor'; }

    // USERS: lecture propre compte + admin/assistant, empêcher élévation de rôle
    match /users/{uid} {
      allow read: if isSignedIn() && (uid == request.auth.uid || isAdmin() || isAssistant());
      allow write: if isSignedIn() && (
        // l'utilisateur peut MAJ son profil mais pas le champ role
        (uid == request.auth.uid && !(('role' in request.resource.data) && !isAdmin()))
        || isAdmin()
      );
    }

    // PATIENTS: docteur sur ses patients; assistant/admin partout
    match /patients/{patientId} {
      allow read: if isSignedIn() && (
        isAdmin() || isAssistant() || (isDoctor() && resource.data.doctorId == request.auth.uid)
      );
      allow create: if isSignedIn() && (
        isAdmin() || isAssistant() || (isDoctor() && request.resource.data.doctorId == request.auth.uid)
      );
      allow update, delete: if isSignedIn() && (
        isAdmin() || isAssistant() || (isDoctor() && resource.data.doctorId == request.auth.uid)
      );
    }

    // APPOINTMENTS: même logique basée sur doctorId
    match /appointments/{appointmentId} {
      allow read: if isSignedIn() && (
        isAdmin() || isAssistant() || (isDoctor() && resource.data.doctorId == request.auth.uid)
      );
      allow create: if isSignedIn() && (
        isAdmin() || isAssistant() || (isDoctor() && request.resource.data.doctorId == request.auth.uid)
      );
      allow update, delete: if isSignedIn() && (
        isAdmin() || isAssistant() || (isDoctor() && resource.data.doctorId == request.auth.uid)
      );
    }

    // Tout le reste interdit par défaut
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
